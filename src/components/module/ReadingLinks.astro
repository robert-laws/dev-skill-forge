---
interface ReadingLink {
  label: string;
  url: string;
}

interface Props {
  links?: ReadingLink[];
}

const { links = [] } = Astro.props;
---

{
  links.length > 0 && (
    <section class="section-block">
      <h2 class="section-title">Further Reading</h2>
      <ul class="content-list">
        {links.map((link) => (
          <li>
            <a href={link.url} target="_blank" rel="noopener noreferrer">{link.label}</a>
          </li>
        ))}
      </ul>
    </section>
  )
}
